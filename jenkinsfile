pipeline {
    agent any

    tools {
        terraform 'terraform'
    }
   
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'Github', url: 'git@github.com:Joel-dev88/static-ngi.git'
            }
        }
    
        stage('Terraform') {
            steps {
                sh 'terraform init'
            
            }
        }

        stage('Ansible') {
            steps {
                retry(count: 5) {
                    sh 'ansible-playbook -i ansible/static-site/aws_ec2.yaml ansible/static-site/site.yaml'
                }
            }
        }
    }
}
